{
  "name": "lilypad-vscode",
  "publisher": "CactiCouncil",
  "displayName": "Lilypad",
  "description": "Lilypad editor for VSCode",
  "repository": "https://github.com/cacticouncil/lilypad",
  "version": "0.1.0",
  "icon": "lilypadIcon.png",
  "extensionKind": [
    "ui"
  ],
  "extensionDependencies": ["ms-python.python"],
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "lilypad.frameBased",
        "displayName": "Lilypad editor",
        "selector": [
          {
            "filenamePattern": "*.py"
          },
          {
            "filenamePattern": "*.java"
          }
        ],
        "priority": "default"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "eslint": "^8.34.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5",
    "@vscode/test-electron": "^2.2.3"
  }
}
